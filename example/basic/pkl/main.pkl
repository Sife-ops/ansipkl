module main

import "./example.pkl"
import "./roles.pkl"

shebang = "#!/usr/bin/env ansible-playbook\n"
dashes = "---\n"
r = new YamlRenderer{}

output {
    files {

        ["example_0.yml"] {
            text = "\(shebang)\(dashes)\(r.renderDocument(example.pb0))"
        }

        ["example_1.yml"] {
            text = "\(shebang)\(dashes)\(r.renderDocument(example.pb1))"
        }

        ["bar/example_2.yml"] {
            text = "\(shebang)\(dashes)\(r.renderDocument(example.pb2))"
        }

        ["roles/docker/tasks/main.yml"] {
            text = "\(dashes)\(r.renderDocument(roles.docker))"
        }

    }
}

