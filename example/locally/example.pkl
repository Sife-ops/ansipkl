import "@ansipkl/Playbook.pkl"
import "@ansipkl/AnsibleBuiltin.pkl"
import "@ansipkl/CommunityGeneral.pkl"

example_00_pb = new Listing<Playbook.Play> {
    new {
        name = "play00"
        hosts = "self"
        remote_user = "root"
        tasks {
            new AnsibleBuiltin.Apt {
                name = "install firefox"
                options {
                    name {
                        "firefox"
                    }
                }
            }.into()

            new AnsibleBuiltin.Apt {
                name = "install vim"
                options {
                    name {
                        "vim"
                    }
                }
            }.into()
        }
    }
}

example_01_pb = new Listing<Playbook.Play> {
    new {
        name = "play0"
        hosts = "self"
        remote_user = "root"
        tasks {
            new CommunityGeneral.Pacman {
                name = "install emacs"
                options {
                    name {
                        "emacs"
                    }
                }
            }.into()
        }
    }
}

